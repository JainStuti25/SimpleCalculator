<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etVar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="68dp"
        android:cursorVisible="?android:attr/windowOverscan"
        android:ems="10"
        android:hint="Enter a Number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorLink="?attr/colorBackgroundFloating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etVar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="24dp"
        android:cursorVisible="?android:attr/windowOverscan"
        android:ems="10"
        android:hint="Enter a Number"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorLink="?attr/colorBackgroundFloating"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/etVar1"
        app:layout_constraintTop_toBottomOf="@+id/etVar1" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:background="@drawable/shape"
        android:text="Addition"
        android:textColorLink="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"
        android:text="Subtraction"
        android:textColorLink="@android:color/holo_orange_dark"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnDiv"
        app:layout_constraintStart_toStartOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:background="@drawable/shape"
        android:text="Multiplication"
        android:textColorLink="@android:color/holo_orange_light"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnAdd"
        app:layout_constraintStart_toEndOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/shape2"
        android:text="Division"
        android:textColorLink="@android:color/holo_orange_dark"
        app:layout_constraintStart_toEndOf="@+id/btnSub"
        app:layout_constraintTop_toBottomOf="@+id/btnMul" />

    <TextView
        android:id="@+id/Result"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSub"
        app:layout_constraintVertical_bias="0.208" />
</android.support.constraint.ConstraintLayout>